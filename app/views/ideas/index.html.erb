<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4">
       <!--<%= image_tag idea.picture_url, :width => '40%' if idea.picture.present?%> -->
        <%= image_tag idea.picture_url(:thumb) if idea.picture? %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>